<h1>Wikis</h1>

<div class="row">
    <div class="col-md-8">
        <% @wikis.each do |wiki| %>
            <div class="media">
                <%= render wiki %>
            </div>
        <% end %>
    </div>
    <% if current_user %>
        <div class="col-md-4">
            <%= link_to "New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
        </div>
    <% end %>
</div>